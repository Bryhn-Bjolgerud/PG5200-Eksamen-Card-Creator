<Window x:Class="Eksamen_PG5200_Card_Creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Eksamen_PG5200_Card_Creator.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1200" ResizeMode="NoResize">
    <Grid>
        <Image Source="Resources/hearthstoneLogo.png" Margin="478,10,478,651"/>
        <Button x:Name="createNewCard" Margin="478,173,602,617" Click="createNewCard_Click" Content="Create new card"/>
        <Button x:Name="importImage" Margin="602,173,478,617" Click="importImage_Click" Content="Import card"/>
        <Button x:Name="createNewType" Margin="780,173,300,617"  Click="createNewType_Click" Content="Create new card type"/>
        <TextBox x:Name="searchBox" Margin="478,215,478,570" BorderThickness="5" BorderBrush="Gray" TextChanged="searchBox_TextChanged"/>
        <ListView x:Name="cardsListView"  Margin="10,268,10,10" Background="Beige" SelectionChanged="cardsListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:CardControl Card="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
